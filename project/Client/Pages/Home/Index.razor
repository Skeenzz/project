@page "/"
@inject NavigationManager NavigationManager
    <head>
        <link href="~/css/bootstrap/bootstrap.min.css" rel="stylesheet" />

    </head>
    <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="3" aria-label="Slide 4"></button>
        </div>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="/Images/Main Menu/City.jpg" class="d-block w-100" alt="1">
                <div class="carousel-caption d-none d-md-block">
                    <h3>Welcome to Travelio</h3>
                </div>
            </div>
            <div class="carousel-item">
                <img src="/Images/Main Menu/Flight.jpg" class="d-block w-100" alt="2">
                <div class="carousel-caption d-none d-md-block">
                    <h3>Book</h3>
                </div>
            </div>
            <div class="carousel-item">
                <img src="/Images/Main Menu/MiniVan.jpg" class="d-block w-100" alt="3">
                <div class="carousel-caption d-none d-md-block">
                    <h3>Your Ride</h3>
                </div>
            </div>
            <div class="carousel-item">
                <img src="/Images/Main Menu/NightScape.jpg" class="d-block w-100" alt="4">
                <div class="carousel-caption d-none d-md-block">
                    <h3>With Us!!</h3>
                </div>
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
    

    <h1>Travelio</h1>

    <h3>Home</h3>

    <h5><button class="btn btn-primary" @onclick="Car">Vehicles</button> <button class="btn btn-primary" @onclick="Flights">Flights</button> <button class="btn btn-primary" @onclick="Packages">Packages</button>  <button class="btn btn-primary" @onclick="Traveltip">Travel Tips</button> <button class="btn btn-primary" @onclick="Map">Map</button></h5>




    @code {
        private void Flights(MouseEventArgs e)
        {
            NavigationManager.NavigateTo("Flight");
        }
        private void Traveltip(MouseEventArgs e)
        {
            NavigationManager.NavigateTo("TravelTip");
        }
        private void Car(MouseEventArgs e)
        {
            NavigationManager.NavigateTo("VehicleMenu");
        }
        private void Packages(MouseEventArgs e)
        {
            NavigationManager.NavigateTo("Packages");
        }
        private void Map(MouseEventArgs e)
        {
            NavigationManager.NavigateTo("map");
        }
    }

